<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:id="@+id/androidid_back">
            <shape android:shape="rectangle">
                <solid android:color="@color/cinxinha"/>
            </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleHeight="50.5%">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="270"
                    android:startColor="@color/azul"
                    android:centerColor="@color/cinxinha"
                    android:endColor="@color/vermelho"/>
            </shape>
        </scale>
    </item>
</layer-list>